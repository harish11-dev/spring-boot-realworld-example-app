pipeline {
    agent any
    stages {
        stage ("Build Stage"){
            steps {
                script {
                    sh """
                         echo "Build" 
                         mkdir hari-spring-boot
                         cd hari-spring-boot
                         """
                }
            }
        }
        stage ("Sourcecode Check"){
            steps {
             sh "git clone https://github.com/taru143/spring-boot-realworld-example-app.git"
            }
        }
        stage ("test stage"){
            steps {
                script {
                    sh """
                         echo "Test " 
                         cd spring-boot-realworld-example-app
                         ./gradlew  build
                         ./gradlew  test
                         """
                }
            }
        }
        stage ("Docker build"){
            steps {
                script {
                    sh """
                         ls -lrth
                         docker build -t bailapudi .
                         """
                }
            }
        }
    }
}
